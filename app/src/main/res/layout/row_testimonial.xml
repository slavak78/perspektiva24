<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginStart="@dimen/section_spacing"
    android:layout_marginEnd="@dimen/section_spacing"
    android:clickable="true"
    android:focusable="true"
    android:tag="layout/row_testimonial_0"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="0.0dip">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_100sdp"
            android:contentDescription="@string/todo"
            android:src="@drawable/testimonial" />

        <LinearLayout
            android:id="@id/layout_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/section_spacing"
            android:layout_marginTop="@dimen/section_spacing"
            android:layout_marginEnd="@dimen/section_spacing"
            android:layout_marginBottom="@dimen/section_spacing"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/section_spacing"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="0.0dip">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:contentDescription="@string/todo"
                    android:scaleType="centerCrop"
                    android:tag="binding_1" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:tag="binding_2"
                    android:textColor="@color/secondary"
                    android:textSize="@dimen/text_size_h5"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:tag="binding_3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_h6" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@id/image_quote"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/section_spacing"
            android:layout_marginBottom="@dimen/section_spacing"
            android:alpha="0.2"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_quote"
            app:tint="@color/grey" />

        <TextView
            android:id="@id/text_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_user"
            android:layout_marginStart="@dimen/section_spacing"
            android:layout_marginEnd="@dimen/section_spacing"
            android:ellipsize="end"
            android:maxLines="7"
            android:paddingEnd="@dimen/section_spacing"
            android:paddingBottom="@dimen/section_spacing"
            android:tag="binding_4"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_h5"
            tools:ignore="RtlSymmetry" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>